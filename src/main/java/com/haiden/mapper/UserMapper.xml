<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.haiden.mapper.UserMapper">

    <sql id="querySql">
        <if test="username!=null and username!=''">
            and username like #{username}
        </if>
        <if test="sex!=null and sex!=''">
            and sex = #{sex}
        </if>

    </sql>
    <select id="getUsers" resultType="user">
        select * from user
    </select>
    <insert id="addUser">
        insert into user values (null,#{username},#{birthday},#{sex},#{address})
    </insert>

    <select id="getUserByNameAndsex" resultType="user">
        select * from user where 1 = 1
        <include refid="querySql"></include>

    </select>
    <select id="getUserByNameAndsex1" resultType="user">
        select * from user
        <where>
           <include refid="querySql"></include>
        </where>
    </select>

    <select id="getUserByNameAndsex2" resultType="user">

        select * from user
        <trim prefix="where" prefixOverrides="and" >
            <include refid="querySql"></include>
        </trim>
    </select>

    <insert id="saveBatch">
        insert into user values
        <foreach collection="list" item="user" separator=",">
            (null,#{user.username},#{user.birthday},#{user.sex},#{user.address})
        </foreach>

    </insert>


</mapper>